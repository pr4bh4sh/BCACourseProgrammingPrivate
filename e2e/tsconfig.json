{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@tests/*": [
                "tests/*"
            ],
            "@framework/*": [
                "src/framework/*"
            ]
        },
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/cucumber-framework"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "configs/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}