{
    "name": "e2e-automation",
    "version": "1.0.0",
    "description": "Mobile E2E Automation Framework for React Native",
    "main": "index.js",
    "scripts": {
        "android": "wdio run configs/wdio.android.conf.ts",
        "ios": "wdio run configs/wdio.ios.conf.ts",
        "test": "npm run android",
        "allure:generate": "allure generate allure-results --clean -o allure-report",
        "allure:open": "allure open allure-report",
        "allure:report": "npm run allure:generate && npm run allure:open",
        "lint": "eslint . --ext .ts",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@wdio/allure-reporter": "^8.27.0",
        "@wdio/appium-service": "^8.27.0",
        "@wdio/cli": "^8.27.0",
        "@wdio/cucumber-framework": "^8.27.0",
        "@wdio/local-runner": "^8.27.0",
        "@wdio/spec-reporter": "^8.27.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "allure-commandline": "^2.25.0",
        "eslint": "^8.56.0"
    }
}