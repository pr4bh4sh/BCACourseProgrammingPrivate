{
    "name": "e2e-automation",
    "version": "1.0.0",
    "type": "module",
    "description": "Mobile E2E Automation Framework for React Native",
    "main": "index.js",
    "scripts": {
        "android:cucumber": "wdio run configs/wdio.android.conf.ts",
        "ios": "wdio run configs/wdio.ios.conf.ts",
        "test": "npm run android:cucumber",
        "download:android": "bash scripts/download-builds.sh android",
        "allure:generate": "allure generate allure-results --clean -o allure-report",
        "allure:open": "allure open allure-report",
        "allure:report": "npm run allure:generate && npm run allure:open",
        "lint": "eslint . --ext .ts",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@wdio/allure-reporter": "9.21.0",
        "@wdio/appium-service": "9.21.0",
        "@wdio/cli": "9.21.1",
        "@wdio/cucumber-framework": "9.21.0",
        "@wdio/globals": "9.17.0",
        "@wdio/local-runner": "9.21.0",
        "@wdio/spec-reporter": "9.20.0",
        "@wdio/types": "9.20.0",
        "appium": "3.1.2",
        "appium-uiautomator2-driver": "6.7.5",
        "ts-node": "10.9.2",
        "typescript": "5.9.3"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "allure-commandline": "2.36.0",
        "eslint": "9.39.2"
    }
}